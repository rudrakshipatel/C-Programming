#include <stdio.h>

int main() {
    int i, boys = 0, girls = 0;
    char sex;

    for(i = 1; i <= 50; i++) {
        printf("Enter sex code for student %d (M/F): ", i);
        scanf(" %c", &sex);

        if(sex == 'M' || sex == 'm')
            boys++;
        else if(sex == 'F' || sex == 'f')
            girls++;
    }

    printf("Boys = %d\nGirls = %d\n", boys, girls);
    return 0;
}
