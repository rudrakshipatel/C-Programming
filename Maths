#include <stdio.h>

int main() {
    float a, b;
    float sum, diff, prod, div;

    printf("Enter two numbers: ");
    scanf("%f %f", &a, &b);

    sum = a + b;
    diff = a - b;
    prod = a * b;

    if (b != 0)
        div = a / b;
    else
        div = 0;

    printf("Sum = %.2f\n", sum);
    printf("Difference = %.2f\n", diff);
    printf("Product = %.2f\n", prod);

    if (b != 0)
        printf("Quotient = %.2f\n", div);
    else
        printf("Division not possible (divide by zero).\n");

    return 0;
}
