#include <stdio.h>

int main() {
    int n, i;
    float num, sum = 0, mean;

    printf("Enter number of values: ");
    scanf("%d", &n);

    for(i = 1; i <= n; i++) {
        printf("Enter value %d: ", i);
        scanf("%f", &num);
        sum += num;
    }

    mean = sum / n;

    printf("Sum = %.2f\nMean = %.2f\n", sum, mean);
    return 0;
}
